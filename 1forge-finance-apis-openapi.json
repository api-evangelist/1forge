{
    "openapi": "3.0.0",
    "info": {
        "version": "0.0.1",
        "title": "1Forge Forex Quote API",
        "description": "1Forge provides real-time quote data (bid & ask) for 700+ pairs. To see a full list of supported currency pairs, please see the full currency pair list. At this time, we do not offer historical data, however, clients are more than welcome to archive our quotes locally for internal use. By connecting directly to brokers and liquidity providers, we are able to provide data as fast as any ECN or brokerage. Depending on how active the market is, you can see price updates over 200 times per second for a single currency pair. No other quote provider in the world can match our accuracy, speed or level of service.",
        "termsOfService": "https:\/\/1forge.com\/forex-data-api\/terms-of-use"
    },
    "servers": [
        "http:\/\/1forge.com\/forex-quotes"
    ],
    "paths": {
        "\/quotes": {
            "get": {
                "summary": "Get Quotes",
                "description": "Get quotes for all symbols",
                "operationId": "GetQuotes",
                "deprecated": 0,
                "parameters": [
                    {
                        "name": "pairs",
                        "in": "query",
                        "description": "Comma separate list of currency pairs."
                    },
                    {
                        "name": "api_key",
                        "in": "query",
                        "description": "Your API key."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of quotes"
                    }
                }
            }
        },
        "\/symbols": {
            "get": {
                "summary": "Symbol List",
                "description": "Get a list of symbols for which we provide real-time quotes",
                "operationId": "GetSymbols",
                "deprecated": 0,
                "parameters": [
                    {
                        "name": "api_key",
                        "in": "query",
                        "description": "Your API key."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of quotes"
                    }
                }
            }
        },
        "\/convert": {
            "get": {
                "summary": "Convert",
                "description": "Convert from one currency to another.",
                "operationId": "Convert",
                "deprecated": 0,
                "parameters": [
                    {
                        "name": "api_key",
                        "in": "query",
                        "description": "Your API key."
                    }
                ]
            }
        },
        "\/market_status": {
            "get": {
                "summary": "Market Status",
                "description": "Check if the market is open.",
                "operationId": "MarketStatus",
                "deprecated": 0,
                "parameters": [
                    {
                        "name": "api_key",
                        "in": "query",
                        "description": "Your API key."
                    }
                ]
            }
        },
        "\/quota": {
            "get": {
                "summary": "Quota",
                "description": "Check your current usage and remaining quota.",
                "operationId": "GetQuota",
                "deprecated": 0,
                "parameters": [
                    {
                        "name": "api_key",
                        "in": "query",
                        "description": "Your API key."
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": []
    }
}